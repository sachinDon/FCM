<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relative_dorderf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_listarrowf1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/exparrow"
                    android:rotation="270"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"/>


                <TextView
                    android:id="@+id/text_order_name_f1"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/text_listarrow"
                    android:layout_height="wrap_content"
                    android:text="Name: Sachin Mokashi"
                    android:lines="1"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/text_orderid"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sanfranciscodisplay_semibold"/>



                <TextView
                    android:id="@+id/text_order_name_datef1"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/text_listarrow"
                    android:layout_height="wrap_content"
                    android:text="Date: 04-10-2020"
                    android:lines="1"
                    android:layout_below="@+id/text_order_name_f1"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sanfranciscodisplay_semibold"/>

                <TextView
                    android:id="@+id/text_orderid_f1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/text_listarrowf1"
                    android:layout_marginStart="15dp"
                    android:text="Order_id: ffdffff"
                    android:layout_below="@+id/text_order_name_datef1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sanfranciscodisplay_medium"/>

                <TextView
                    android:id="@+id/text_order_total_f1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total amount: Rs 1010"
                    android:lines="1"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="15dp"
                    android:layout_below="@+id/text_orderid_f1"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sanfranciscodisplay_medium"/>

            </RelativeLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/relative_dorderf1"
                android:background="@color/txt_lightgray_241"
                />


        </RelativeLayout>

</RelativeLayout>