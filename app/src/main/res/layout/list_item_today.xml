<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backbluealpha">


    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/image_today"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:siShape="@drawable/shape_rounded_rectangle"
        app:siSquare="true"
        android:layout_marginBottom="7dp"
        android:src="@drawable/default1"/>



    <TextView
        android:id="@+id/text_title_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pea "
        android:textAlignment="viewStart"
        android:lines="1"
        android:layout_marginTop="-8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignTop="@+id/image_today"
        android:layout_toEndOf="@+id/image_today"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/sanfranciscodisplay_bold"/>
    <TextView
        android:id="@+id/text_cust1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_title_today"
        android:layout_toEndOf="@+id/image_today"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:text="Rs 10/250gm"
        android:textColor="@color/black"
        android:fontFamily="@font/sanfranciscodisplay_regular"
        />
    <TextView
        android:id="@+id/text_cust2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_cust1"
        android:layout_toEndOf="@+id/image_today"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Rs 20/500gm"
        android:fontFamily="@font/sanfranciscodisplay_regular"
        />

    <TextView
        android:id="@+id/text_cust3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_cust2"
        android:layout_toEndOf="@+id/image_today"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:textSize="16dp"
        android:text="Rs 70/1kg"
        android:textColor="@color/black"
        android:fontFamily="@font/sanfranciscodisplay_regular"
        />





    <TextView
        android:id="@+id/text_titlet_otday_Addcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AddCart"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:paddingRight="15dp"
        android:paddingBottom="7dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/roundedgreen"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/sanfranciscodisplay_medium"/>

    <TextView
        android:id="@+id/text_border_vend"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/text_cust3"
        android:background="@color/gray"/>

</RelativeLayout>