<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_farmerbill_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_below="@+id/relative_farmer_title1"
        android:background="@drawable/boderline_bottom1px">
        <TextView
            android:id="@+id/text_items_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bananana"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/text_rate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rate"
            android:maxLines="1"
            android:layout_weight="0.9"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/text_qty1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:layout_weight="0.6"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/text_totalfarmer1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textSize="16sp"

            />
    </LinearLayout>

</RelativeLayout>