<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_custrate_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="@drawable/boderline_bottom1px">
        <TextView
            android:id="@+id/text_items_name1_custrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bananana"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/text_rate1_custrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Customer Rate"
            android:maxLines="1"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_green"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/text_vendor_custrate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vendor Rate"
            android:layout_weight="0.8"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_green"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textSize="14sp"
            />
    </LinearLayout>


</RelativeLayout>