<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cutom_dilaog_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/round_lightgray"
        >


        <TextView
            android:id="@+id/textview_address_divtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="@font/sanfranciscodisplay_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:textColor="@color/black"
            android:text="Select a delivery address"
            />



        <ListView
            android:id="@+id/listview_customer_orderaddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_above="@+id/relaive_orderadd_save"
            android:layout_below="@+id/textview_address_divtitle"
            android:divider="@color/white" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/relaive_orderadd_save">

</RelativeLayout>



    </RelativeLayout>



</RelativeLayout>