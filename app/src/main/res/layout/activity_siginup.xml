<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_backroundview"
    tools:context="info.wkweb.com.vmart.SiginupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/signup_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            android:orientation="vertical"
            android:visibility="visible"

            >

            <TextView
                android:id="@+id/v_titile"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/noteworthy_bold"
                android:textSize="32sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/fpm"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
              />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/v_titile"
                android:layout_gravity="center"
                android:background="@drawable/border_bottom_white"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:theme="@style/AppTheme.EditTextOverlay"
                android:textColorHint="@color/white"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/name"
                android:layout_gravity="center"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:background="@drawable/border_bottom_white"
                android:textColor="@color/white"
                android:theme="@style/AppTheme.EditTextOverlay"
                android:textColorHint="@color/white"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/email"
                android:layout_gravity="center"
                android:hint=" Password"
                android:inputType="textPassword"
                android:background="@drawable/border_bottom_white"
                android:textColor="@color/white"
                android:theme="@style/AppTheme.EditTextOverlay"
                android:textColorHint="@color/white"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/sig_mobile"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/password"
                android:layout_gravity="center"
                android:hint=" Mobile No"
                android:inputType="textPhonetic"
                android:background="@drawable/border_bottom_white"
                android:textColor="@color/white"
                android:theme="@style/AppTheme.EditTextOverlay"
                android:textColorHint="@color/white"
                android:fontFamily="@font/sanfranciscodisplay_medium"
                android:textSize="15sp"
                android:layout_marginTop="12dp"/>



            <Button
                android:id="@+id/button_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sig_mobile"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/border_singup"
                android:gravity="center"
                android:text="Sign up"
                android:textAllCaps="false"
                android:fontFamily="@font/sanfranciscodisplay_semibold"
                android:textColor="@color/lighit_gray_sys"
                android:textSize="18sp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"

                />


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_signup"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:gravity="center"

                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/sanfranciscodisplay_medium"
                    android:text="Already have an account?"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    />

                <TextView
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/sanfranciscodisplay_bold" />

            </LinearLayout>

            <!-- <CheckBox
                 android:id="@+id/text_show"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_alignTop="@+id/password"
                 android:text="show" />-->
        </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>
