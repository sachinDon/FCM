<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.wkweb.com.vmart.OrderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeToRefresh_vendor"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listview_orderlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/white" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/text_result_cust_order"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/orderlist"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/sanfranciscodisplay_bold"/>

        <ProgressBar
            android:id="@+id/progress_order"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</FrameLayout>
