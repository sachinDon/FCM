<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_farmeritem_title_pdl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="@drawable/boderline_bottom1px">
        <TextView
            android:id="@+id/text_pdfbill_invoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Invoice No."
            android:layout_weight="1.1"
            android:gravity="center"
            android:paddingTop="10dp"
            android:maxLines="1"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/text_pdfbill_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:maxLines="1"
            android:layout_weight="0.9"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/text_pdfbill_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_weight="0.7"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:textSize="16sp"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/exparrow"
                android:rotation="270"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>