<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmerItemReportActivity">
    <RelativeLayout
        android:id="@+id/relative_farmeritem_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_backroundview">
        <TextView
            android:id="@+id/text_farmeritem_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Item Report"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/text_back_farmeritem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:text="Back"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/sanfranciscodisplay_medium"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_farmeritem_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_farmeritem_title">
        <TextView
            android:id="@+id/text_datetitles"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Select date and view item reports"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/text_datetname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Date:"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:layout_below="@+id/text_datetitles"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/text_dateset_farmeritem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04-09-2020"
            android:textSize="16sp"
            android:fontFamily="@font/sanfranciscodisplay_bold"
            android:background="@color/black"
            android:layout_marginStart="15dp"
            android:paddingEnd="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="20dp"
            android:layout_toEndOf="@+id/text_datetname"
            android:layout_below="@+id/text_datetitles"

            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_green"
            />

    </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_farmeritem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_below="@+id/relative_farmeritem_date"
            android:background="@drawable/bottom_borderline">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:layout_weight="1.5"
                android:gravity="center"
                android:paddingTop="10dp"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sanfranciscodisplay_bold"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rate"
                android:maxLines="1"
                android:layout_weight="0.9"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sanfranciscodisplay_bold"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Qty"
                android:layout_weight="0.6"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sanfranciscodisplay_bold"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sanfranciscodisplay_bold"
                android:textSize="16sp"
                />
        </LinearLayout>
    <ListView
        android:id="@+id/listview_farmeritem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white"
        android:layout_below="@+id/linear_farmeritem_title"/>

    <TextView
        android:id="@+id/text_result_farmeritem"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/orderlist"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/sanfranciscodisplay_bold"/>

    <ProgressBar
        android:id="@+id/progress_farmeritem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>